{
    "manifest_version": 2,
    "name": "Holberton File Downloader",
    "description": "This extension will create blank files using the filenames scraped from the active Holberton School project page.",
    "version": "1.0",
    "background" : {
        "scripts": ["background.js"],
        "persistent": false
      },
    "content_scripts": [
        {
            "matches": [
                "https://intranet.hbtn.io/*"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com/ajax/libs/; object-src 'self'",
    "page_action": {
        "default_icon": "holberton-logo-full-black.png",
        "default_name": "Holberton File Downloader",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "downloads"
    ]
}
